<!DOCTYPE html>
<html>

<head>
    <title>Productivity Manager</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>Productivity Manager</h1>
    <form action="/add" method="POST" class="add-task-form">
        <input type="text" name="title" placeholder="Task Title" required>
        <textarea name="description" placeholder="Task Description" class="description-field"></textarea>
        <button type="submit">Add</button>
    </form>
    <ul class="task-list">
        <% tasks.forEach(task=> { %>
            <li class="task-item">
                <span class="task-title">
                    <%= task.title %>
                </span>
                <a href="/task/<%= task.id %>" class="view-details-link">View Details</a>
                <% if (!task.completed) { %>
                    <form action="/complete/<%= task.id %>" method="POST" class="task-action-form">
                        <button type="submit" class="task-complete-button">Complete</button>
                    </form>
                    <% } %>
                        <form action="/delete/<%= task.id %>" method="POST" class="task-action-form">
                            <button type="submit" class="task-delete-button">Delete</button>
                        </form>
            </li>
            <% }); %>
    </ul>
</body>

</html>